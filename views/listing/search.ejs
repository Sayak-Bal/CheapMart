<% layout("/layouts/boilerplate") -%>
<div>
    <h1>found result <%= total %></h1>
</div>
<% for(items of users) { %>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <a href='/listing/<%= items._id %>'>
    <div class="card col">
        <img src="<%= items.image.url %>" class="card-img-top" alt="listing_img" style="height:20rem"/>
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
          <b><%= items.title %></b>  
          </b> <br/>
          <b> &#8377;<%= (items.price != null ? items.price.toLocaleString('en-IN') : 'Price not available') %> </b>
        </p>
        </div>
      </div>
      </a>
</div>
<% } %>
